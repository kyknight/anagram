

<form action="<%= words_form_action(@word) %>" method="post" class="<%= words_form_class(@word) %>" id="<%= words_form_id(@word) %>">

  	<input type="hidden" name="_method" value="<%= words_form_method(@word) %>" placeholder="Enter new word">

 <div class="form-group">
  	<label for="text" class="control-label">Enter your contribution:</label>
  	<div>
  			<input class="form-control" type="text" name="text" value="<%= @word.text %>" />
      </div>
  </div>

  <div class="form-group">
  	<div>
  	<button type="submit" class="btn btn-default">Add my word!</button>
  	</div>
  </div>
</form>